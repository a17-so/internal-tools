# Scraper backend is always local (in-process SearchAPI + local templates)
SCRAPE_APP=regen
SEARCHAPI_KEY=
SEARCHAPI_TIMEOUT_SECONDS=10
# Optional override path for loading SEARCHAPI_KEY + OUTREACH_APPS_JSON from sibling outreach-tool env
LOCAL_OUTREACH_ENV_YAML=../outreach-tool/api/envs/env.yaml
# Optional fallback if IG is still missing: assume same as TikTok handle
SCRAPE_IG_SAME_USERNAME_FALLBACK=false
# Local template scripts dir (defaults to sibling outreach-tool repo)
LOCAL_TEMPLATES_DIR=../outreach-tool/api/scripts

# Google Cloud / Firebase
# Optional if using ADC via `gcloud auth application-default login`
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_CLOUD_QUOTA_PROJECT=your-gcp-project-id
GOOGLE_SHEETS_ID=your-google-sheet-id
RAW_LEADS_SHEET_NAME=Raw Leads
# Optional explicit header overrides if your sheet uses different names
RAW_LEADS_URL_COLUMN=
RAW_LEADS_TIER_COLUMN=
RAW_LEADS_STATUS_COLUMN=
FIRESTORE_PROJECT_ID=your-gcp-project-id

# Gmail OAuth app credentials
GMAIL_CLIENT_ID=your-google-oauth-client-id
GMAIL_CLIENT_SECRET=your-google-oauth-client-secret

# Gmail sender accounts (refresh tokens)
GMAIL_ACCOUNT_1_EMAIL=sender1@a17.so
GMAIL_ACCOUNT_1_REFRESH_TOKEN=replace-me
GMAIL_ACCOUNT_2_EMAIL=sender2@a17.so
GMAIL_ACCOUNT_2_REFRESH_TOKEN=replace-me
GMAIL_ACCOUNT_3_EMAIL=sender3@a17.so
GMAIL_ACCOUNT_3_REFRESH_TOKEN=replace-me

# Runtime options
SENDER_PROFILE=default
DEFAULT_CREATOR_TIER=Submicro
LOG_LEVEL=INFO
BATCH_SIZE=100
RUN_LOCK_TTL_SECONDS=1800
DRY_RUN=true
EMAIL_SEND_ENABLED=true

# Persistent Chrome profile directories for Playwright DM senders
IG_PROFILE_DIR=profiles/instagram
TIKTOK_PROFILE_DIR=profiles/tiktok
# Optional: attach to an already-open local Chrome with remote debugging for TikTok sends
TIKTOK_ATTACH_MODE=false
TIKTOK_CDP_URL=http://127.0.0.1:9222
# Minimum spacing between TikTok sends for the same sender account
TIKTOK_MIN_SECONDS_BETWEEN_SENDS=3
# Backward-compatible aliases (optional)
IG_SESSION_DIR=
TIKTOK_SESSION_DIR=
